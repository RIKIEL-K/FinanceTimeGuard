@{
    ViewData["Title"] = "Add";
}
@model prjFinanceTime.Models.entities.User

<div class="justify-content-center align-items-center vh-100">
    <form class="row g-3" method="post" enctype="multipart/form-data">
        <div class="row g-3">
            <div class="col">
                <label for="firstname" class="form-label">Username</label>
                <input type="text" class="form-control" placeholder="First name" id="firstname" asp-for="UserName">
            </div>
        </div>

   
            <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" asp-for="UserEmail">
            </div>
            <div class="col-md-6">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" asp-for="Password">
            </div>
            <div class="col-12">
                <label for="adress" class="form-label">Address</label>
                <input type="text" class="form-control" id="adress" placeholder="1234 Main St">
            </div>
            <div class="col-12">
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Add youy Image</label>
                        <input class="form-control" type="file" id="formFile" name="image" required asp-for="Images">
                    </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
    </form>
</div>